# HTDP2
Fixed Size Data - Arithmetic Exercises

;Exercise 1

(define x 3)
(define y 4)

(sqrt (+ (sqr x) (sqr y)))

> 5


;Exercise 2

(define prefix "hello")
(define suffix "world")

(string-append prefix "_" suffix)

>"hello_world"


;Exercise 3

(define str "helloworld")
(define i 5)

(string-append (substring str 0 i)
               (string-append "_" (substring str i)))
              
>"hello_world"


;Exercise 4

(define str "helloworld")
(define i 5)

 (string-append (substring str 0 4)
   (substring str 6))
   
> "helloorld"   
   
   
;Exercise 5

(require 2htdp/image)

(overlay/xy (triangle 40 "solid" "dark green") -30 -15
 (overlay (rectangle 10 50 "solid" "brown")
          (empty-scene 100 100)))
          

;Exercise 6

(require 2htdp/image)

(define cat [insert image here])

(* (image-width cat) (image-height cat))


;Exercise 7

(define sunny #true)
(define friday #false)

(or (not sunny) friday)


